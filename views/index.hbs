<a href="./todos/new">Create</a>
<ul>
    {{#each todos}}
    <li>
        <input type="checkbox" name="isDone" {{#if todo.isDone}} checked {{/if}} disabled>
        {{this.name}}
        <button onclick="window.location.href = '/todos/{{this._id}}'">detail</button>
        <a href="./todos/{{ this._id }}/edit">edit</a>
        <form action="/todo/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit">delete</button>
        </form>
    </li>
    {{/each}}
</ul>